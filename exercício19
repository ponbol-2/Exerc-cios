<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Contador de Cliques</title>
</head>
<body>
    <button id="btnContador">Clique aqui</button>
    <p>Quantidade de cliques: <span id="contador">0</span></p>

    <script>
        let cliques = 0;
        const btn = document.getElementById('btnContador');
        const contador = document.getElementById('contador');

        btn.addEventListener('click', function() {
            cliques++;
            contador.innerText = cliques;
        });
    </script>
</body>
</html>
